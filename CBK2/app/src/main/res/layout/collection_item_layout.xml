<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/collection_item_iv"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@mipmap/logo"
    />

    <TextView
        android:id="@+id/collection_item_tv_title"
        android:layout_width="match_parent"
        android:lines="3"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_toRightOf="@id/collection_item_iv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/collection_item_tv_key"
        android:layout_width="wrap_content"
        android:layout_below="@id/collection_item_tv_title"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/collection_item_iv"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/collection_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_below="@id/collection_item_tv_title"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/collection_item_tv_key"
        android:layout_height="wrap_content" />
</RelativeLayout>